<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="header_textview_style" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="paddingStart">@dimen/bottom_sheet_layout_description_header_paddingStart</item>
        <item name="paddingEnd">@dimen/bottom_sheet_layout_description_header_paddingEnd</item>
        <item name="android:layout_marginTop">@dimen/bottom_sheet_layout_description_header_marginTop</item>
    </style>

    <style name="AppShapeAppearance.SmallComponent.Cut" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="AppShapeAppearance.SmallComponent.Rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="AppShapeAppearance.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="textview_style" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="paddingStart">@dimen/bottom_sheet_layout_description_paddingStart</item>
        <item name="paddingEnd">@dimen/bottom_sheet_layout_description_paddingEnd</item>
    </style>

    <style name="chip_group_style" parent="Widget.MaterialComponents.ChipGroup">
        <item name="android:background">@color/black</item>
    </style>

    <style name="chip_style" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="chipBackgroundColor">@android:color/holo_green_dark</item>
        <item name="chipCornerRadius">@dimen/chip_corner_radius</item>
    </style>

</resources>